{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "lib",
    "baseUrl": ".",
    "types": ["node", "mocha"],
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "types"
  ],
  "experimentalDecorators": true
}