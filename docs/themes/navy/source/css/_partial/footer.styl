#footer
  clearfix()
  padding: 40px 0
  color: rgba(255, 255, 255, 0.6)
  font-family: font-title
  position: relative
  background: color-navy
  text-align: center
  @media mq-normal
    text-align: left
  @media print
    display: none
  a
    color: inherit
    text-decoration: none
    transition: 0.2s
    &:hover
      color: #fff

#footer-copyright
  line-height: 1.4
  @media mq-normal
    float: left
  a
    font-weight: bold

#footer-links
  margin-top: 1em
  @media mq-normal
    float: right
    margin-top: 0

.footer-link
  position: relative
  font-size: 30px
  margin-left: 20px
  cursor: pointer
  &:first-child
    margin-left: 0
  .wechat-qrcode
    display: none;
    position: absolute
    top: -280px
    left: -86px
    img
      width: 200px
      border-radius: 2px
    .wechat-qrcode-icon
      transform: rotate(225deg)
      -ms-transform: rotate(225deg)
      -moz-transform: rotate(225deg)
      -webkit-transform: rotate(225deg)
      -o-transform: rotate(225deg)
      background-color: #FFF
      border-color: #FFF
      overflow: hidden
      width: 12px
      height: 12px
      position: absolute
      left: 94px
      top: 259px
      border-left: 1px solid #000
      border-top: 1px solid #000  
  .qr-on
    display: inline-block    