.encologies-detail
    padding-top 78px
    width 100%
    display flex
    align-items flex-start

    &__header
        font-size 20px
        color #222222

    &__line
        position relative
        &::after
            content ""
            position absolute
            left 0
            bottom 0
            width 100%
            height 2px
            background-color #ccc

    &__screenshots
        position relative
        width 52.0183%
        box-sizing border-box
        padding 30px 30.5px 44.5px 31.5px
        background-color: #ffffff;
        box-shadow: 0px 1.5px 4px 1px rgba(0, 0, 0, 0.03);
        border-radius: 2.5px;
        border: solid 1px rgba(0, 0, 0, 0.1);

        &::before
            content ""
            position absolute
            width 100%
            height 4px
            top 0
            left 0
            background-image linear-gradient(
                to right,
                #317cfe 0,
                #20bdff 50%,
                #a0fccd 100%
            )

        &-image
            width 100%

        .encologies-detail__header
            position relative
            display inline-block
            padding-bottom 16.5px
            color #000000

        &-item
            width 100%
            margin-top 29px

    &__contents
        flex 1
        box-sizing border-box
        padding-left 71px

        &-intro
            position relative
            padding-top 5.5px
            padding-bottom 27.5px

            &::after
                width 100%
                height 2px
                background-color #cccccc
        &-name
            font-size 26px
            color #222222
        &-overview
            margin-top 10px
            font-size 16px
            color #666666
        &-description
            margin-top 39.5px
            font-size 18px
            color #666666
            line-height 1.5

        &-bases
            margin-top 42px
            padding-bottom 32.5px
            .encologies-detail__header
                margin-bottom 32px
            & > table
                width 100%
        &-item
            font-size 18px
            color #666666
            &:not(:first-child) > td
                padding-top 24.5px
        &-tip
            width 50%
        &-github
            position relative
            vertical-align bottom
            & > i
                display inline-block
                width 21px
                height 11px
                margin-left 8.5px
                margin-right 13.5px
                background-image url('https://qpic.url.cn/feeds_pic/PiajxSqBRaEIF5tKJuRmQ6956oqp8CBUy5iaicy3wfK5gIyaMDKS6V8iaw/')
                background-size 100% 100%
            & > a
                position absolute
                width 100%
                height 100%
                top 0
                left 0

        &-uses
            margin-top 54.5px
            .article-content
                margin-top 26px


