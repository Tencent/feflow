#carbonads
  display: block
  overflow: hidden
  margin-top: 40px
  max-width: 130px
  text-align: left
  font-size: 13px
  line-height: 1.5
  a
    color: inherit
    text-decoration: none
  &:hover
    color: inherit
  span
    display: block
    overflow: hidden

.carbon-img
  display: block
  margin: 0 auto 8px
  line-height: 1

.carbon-text
  display: block
  margin-bottom: 8px

.carbon-poweredby
  display: block
  text-transform: uppercase
  letter-spacing: 1px
  font-size: 9px
  line-height: 1