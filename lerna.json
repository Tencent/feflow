{
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "test",
        "*.log",
        "*.md",
        "*-lock.json"
      ],
      "registry": "https://registry.npmjs.org",
      "message": "chore(release): publish"
    },
    "version": {
      "ignoreChanges": [
        "**/test/**",
        "**/*.md",
        "**/*-lock.json"
      ]
    }
  },
  "version": "independent",
  "useWorkspaces": true
}
